{% extends bigfoot_theme_bundle~'::base.html.twig' %}

{% block content %}

    <form action="{{ path('admin_parameter_metadataparameter_create') }}" method="post" {{ form_enctype(form) }}>

        <div class="widget">
            <div class="widget-head">
                <div class="pull-left">{{ 'MetadataParameter creation' | trans }}</div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">
                <div class="padd">

                    {{ form_errors(form) }}

                    {{ form_row(form.route) }}

                    <h4>{{ 'Parameters' | trans }}</h4>
                    <ul class="parameters" data-prototype="{{ form_widget(form.parameters.vars.prototype)|e }}">
                        {% for parameter in form.parameters %}
                            <li>
                                {{ form_row(parameter.name) }}<br />
                                {{ form_row(parameter.description) }}
                            </li>
                        {% endfor %}
                    </ul>


                    <div style="display:none;">{{ form_rest(form) }}</div>

                </div>
            </div>

            <div class="widget-foot">
                <button class="btn" type="submit">{{ 'Create' | trans }}</button>
                <a href="{{ path('admin_parameter_metadataparameter') }}" class="btn">{{ 'Cancel' | trans }}</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </form>

{% endblock %}



{% block javascripts %}
    <script src="{{ asset('bundles/bigfootseo/js/seo_scripts.js') }}"></script>
{% endblock %}